# ClaudeAutomator Configuration
# Copy this to config.env and customize

# Target directory - the codebase to improve
TARGET_DIR="/path/to/your/webapp"

# Maximum iterations (0 = unlimited)
MAX_ITERATIONS=0

# Default wait time in minutes when rate limited (if auto-detection fails)
DEFAULT_WAIT_MINUTES=60

# Use paid credits? (default: false - only uses free quota)
# Set to "true" if you want to spend credits instead of waiting
USE_CREDITS=false

# Claude model (leave empty for default)
# CLAUDE_MODEL="claude-sonnet-4-20250514"

# Log file location
LOG_FILE="./claudeautomator.log"

# Prompt file (alternative to inline prompt)
PROMPT_FILE="./prompt.txt"
